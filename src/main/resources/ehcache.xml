<config xmlns='http://www.ehcache.org/v3'>
    <cache-template name="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap unit="entries">500</heap>
    </cache-template>

    <cache alias="specificDate" uses-template="default"/>
    <cache alias="periodDates" uses-template="default"/>
    <cache alias="asin" uses-template="default"/>
    <cache alias="asins" uses-template="default"/>
    <cache alias="allPeriod" uses-template="default"/>
    <cache alias="allAsins" uses-template="default"/>

</config>
